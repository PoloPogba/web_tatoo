
<div class="page-header" >
      <%= image_tag "cover.jpg", :class=>"page-header-image" %>
        <div class="content">
            <div class="container">
              <h2>Sign up</h2>

              <p> Bravo, vous venez de finir de remplir votre devis, pour y accÃ©der gratuitement, merci de renseigner votre adresse email et votre nom ! </p>
                <div class="col-md-5 ml-auto mr-auto">
                    <div class="card card-login card-plain">


                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class=>"form") do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>
                            <div class="card-header text-center">
                                <div class="logo-container">
                                    <img src="../assets/img/now-logo.png" alt="">
                                </div>
                            </div>
                            <div class="card-body">
                              <div class="input-group form-group-no-border input-lg">
                                  <div class="input-group-prepend">
                                      <span class="input-group-text">  <%= f.label :first_name  %></span>
                                  </div>

                                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :class=>"form-control"%>

                              </div>



                              <div class="input-group form-group-no-border input-lg">
                                  <div class="input-group-prepend">
                                      <span class="input-group-text">  <%= f.label :last_name  %></span>
                                  </div>

                                    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :class=>"form-control"%>

                              </div>





                                <div class="input-group form-group-no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">  <%= f.label :email %></span>
                                    </div>

                                      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control"%>
                                </div>




                                <div class="input-group form-group-no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">  <%= f.label :password %></span>
                                    </div>

                                      <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control"%>


                                </div>
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %>


                                <div class="input-group form-group-no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">  <%= f.label :password_confirmation %></span>
                                    </div>

                                      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control"%>
                                </div>




                            </div>
                            <div class="card-footer text-center">


                                  <%= f.submit "Sign up", :class=>"btn btn-info btn-round btn-lg btn-block" %>
                                  <% end %>


                            </div>

                                <h6>
                                      <%= render "devise/shared/links", :class=>"link footer-link" %>
                                </h6>


                    </div>
                </div>
            </div>
        </div>
    </div>
